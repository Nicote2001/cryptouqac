@{
    ViewData["Title"] = "Home Page";
}
@model List<Key>

<div class="container mt-5">
    <h1>Formulaire d'encryption de messages'</h1>
    <form asp-action="Result" method="post">
        <div class="form-group">
            <label for="selectElement">Sélectionnez une clé afin d'encrypter' :</label>
            <select class="form-control" id="selectElement" name="KeyId">
                @for (int i = 0; i < Model.Count(); i++)
                {
                    <option value="@Model[i].id">@Model[i].name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="textareaElement">Entrez un message à encrypter :</label>
            <textarea class="form-control" id="textareaElement" rows="4" name="message"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Importer</button>
    </form>
</div>